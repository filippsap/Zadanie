@model Zadanie.Models.Provider

@{
    ViewData["Title"] = "CreateProvider";
}

<h1>Создание поставщика</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProvider">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
  <a asp-action="Index" class="btn btn-outline-success"><i class="far fa-plus-square">Вернуться</i></a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
